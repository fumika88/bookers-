<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>tittle</th>
      <th>Body</th>
      <th colspan="3"></th>
      </tr>
      </thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
  <%= link_to "show",book_path(book.id) %>
  <%= link_to "edit",edit_book_path(book.id) %>
  <%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
  </tr>
  <% end %>
  </tbody>
  </table>


<h2> New Book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create Book' %>

<% end %>